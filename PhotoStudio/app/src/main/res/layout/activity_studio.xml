<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thangam.photostudio.Studio"
    android:background="#f2f2f2"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/sttext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Studio and Outdoor"
            android:layout_gravity="center"
            android:textColor="#66ccff"
            android:textSize="30dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/stim"
            android:layout_width="153dp"
            android:layout_height="157dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/portraits" />
        <com.ms.square.android.expandabletextview.ExpandableTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/expand_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            expandableTextView:maxCollapsedLines="4"

            android:layout_marginTop="30dp">
            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="30sp"
                android:textColor="#000373"
                android:fontFamily="cursive"/>
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="right|bottom"
                android:background="@android:color/background_dark"/>
        </com.ms.square.android.expandabletextview.ExpandableTextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/stim1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"

                android:src="@drawable/st1"

                />

            <TextView
                android:id="@+id/family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"

                android:text="Family and Couple"
                android:textColor="#66ccff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/stbut1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="View Sample Pictures"

                android:textColor="#000373" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="right"
            >


            <ImageView
                android:id="@+id/stim2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"

                android:src="@drawable/st2"

                />

            <TextView
                android:id="@+id/kids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"

                android:text="Kids and Baby"
                android:textColor="#66ccff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/stbut2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="View Sample Pictures"
                android:textColor="#000373" />



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"

            >


            <ImageView
                android:id="@+id/stim3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/st3"

                />

            <TextView
                android:id="@+id/wedding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="Wedding Proposal"
                android:textColor="#66ccff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/stbut3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="View Sample Pictures"
                android:textColor="#000373" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
android:gravity="right"
            >


            <ImageView
                android:id="@+id/stim4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/st4"

                />

            <TextView
                android:id="@+id/fashion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="Fashion And  Beauty"
                android:textColor="#66ccff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/stbut4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="View Sample Pictures"
                android:textColor="#000373" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

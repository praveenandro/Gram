<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thangam.photostudio.Studio"
    android:background="#f2f2f2"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/wedtext1"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
               android:gravity="center"
                android:text="Wedding Photo And Videography"

                android:textColor="#66ccff"
                android:textSize="30sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/medimtop"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mrg5"
                />
            <com.ms.square.android.expandabletextview.ExpandableTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="4"

                android:layout_marginTop="30dp">
                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="30sp"
                    android:textColor="#000373"
                    android:fontFamily="cursive"/>
                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/background_dark"/>
            </com.ms.square.android.expandabletextview.ExpandableTextView>
            <Button
                android:id="@+id/wedbut1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Sample Pictures"
                android:textColor="#000373"
                android:fontFamily="cursive"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/wedim1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="invisible"

                android:src="@drawable/mrg"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/wedim2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="invisible"

                android:src="@drawable/mrg1"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/wedim8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/mrg8"
            android:visibility="invisible"

            android:layout_gravity="center"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/wedim3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mrg2"
                android:visibility="invisible"

                android:layout_weight="1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/wedim4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mrg3"
                android:visibility="invisible"

                android:layout_weight="1"/>



        </LinearLayout>

        <ImageView
            android:id="@+id/wedim5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/mrg4"
android:layout_gravity="center"
            android:visibility="invisible"

            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/wedim6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mrg5"
                android:visibility="invisible"

              />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/wedim7"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mrg6"
                android:visibility="invisible"

             />



        </LinearLayout>

    </LinearLayout>

</ScrollView>

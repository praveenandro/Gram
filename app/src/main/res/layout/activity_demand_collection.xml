                  </LinearLayout>-->


            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/id_ed_assess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:backgroundTint="#6BD863"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:hint="Enter Assess No"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textColor="#FFFFFF"
                android:text="(OR)"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/id_ed_door"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#6BD863"
                android:textColorHint="#FFFFFF"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:hint="Enter Door No [Eg. 1/155A]"></EditText>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:text=""
                android:textColor="#E01515"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/id_but_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6BD863"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:text="PROCEED"></Button>
</RelativeLayout>